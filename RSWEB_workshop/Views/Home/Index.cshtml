@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Ekursevi</h1>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <p>See <a asp-controller="Students" asp-action="Index">students</a>,
        <a asp-controller="Teachers" asp-action="Index">teachers</a> or 
        <a asp-controller="Courses" asp-action="Index">courses</a>.
        </p>
    }
    else if(User.Identity.IsAuthenticated && User.IsInRole("Teacher"))
    {
        <a asp-controller="Courses" asp-action="Teaching" asp-route-id="1">
        @Html.Raw("<p> Your courses</p>")
        </a>
    }
    else if(User.Identity.IsAuthenticated && User.IsInRole("Student"))
    {
        <a asp-controller="Enrollments" asp-action="StudentVM" asp-route-id="3">
        @Html.Raw("<p> Your courses</p>")
        </a>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Login"/>
        @Html.Raw("Go To Login Screen</a></p>");
    }
</div>